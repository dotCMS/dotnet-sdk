@model RazorPagesDotCMS.Models.PageResponse
@{
    var layout = Model?.Entity?.Layout;
    var page = Model?.Entity?.Page;
}

<h2>Header TagHelper Examples</h2>

<h3>Example 1: Basic usage with default content from _HeaderExample.cshtml</h3>
<header-section show="true" title="@(page?.Title ?? "DotCMS")"></header-section>

<h3>Example 2: With custom content</h3>
<header-section show="true">
    <div class="custom-header">
        <h1>Custom Header Content</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/products">Products</a></li>
                <li><a href="/services">Services</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
    </div>
</header-section>

<h2>Footer TagHelper Examples</h2>

<h3>Example 1: Basic usage with default content from _FooterExample.cshtml</h3>
<footer-section show="true" copyright="@(page?.Title ?? "DotCMS")"></footer-section>

<h3>Example 2: With custom content</h3>
<footer-section show="true">
    <div class="custom-footer">
        <div class="footer-info">
            <h3>Custom Footer Content</h3>
            <p>Your content management solution</p>
        </div>
        <div class="footer-links">
            <h4>Quick Links</h4>
            <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/support">Support</a></li>
            </ul>
        </div>
    </div>
</footer-section>
