@model RazorPagesDotCMS.Models.PageResponse
@{
    var layout = Model?.Entity?.Layout;
    var page = Model?.Entity?.Page;
}

@* Example 1: Basic usage with default content *@
<footer-section show="@(layout?.Footer == true)" copyright="@(page?.Title ?? "DotCMS")"></footer-section>

@* Example 2: With custom content *@
<footer-section show="@(layout?.Footer == true)" copyright="@(page?.Title ?? "DotCMS")">
    <div class="custom-footer">
        <div class="footer-info">
            <h3>@(page?.Title ?? "DotCMS")</h3>
            <p>Your content management solution</p>
        </div>
        <div class="footer-links">
            <h4>Quick Links</h4>
            <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/support">Support</a></li>
            </ul>
        </div>
        <div class="footer-contact">
            <h4>Contact Us</h4>
            <p>Email: info@example.com</p>
            <p>Phone: (123) 456-7890</p>
        </div>
    </div>
</footer-section>
